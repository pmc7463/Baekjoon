{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe 활성 파일 빌드",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "디버거에서 생성된 작업입니다."
        },
        // 파이썬
        {
            "label": "python3",
            "type": "shell",
            "command":"python",
            "args":["${file}"],
            "group":{
                "kind":"build",
                "isDefault":true
            },
            "presentation":{
                "echo":true,
                "reveal":"always",
                "focus":false,
                "panel":"shared",
                "showReuseMessage":true,
                "clear":true
            }
        }
        
    ],
    "version": "2.0.0"
}
